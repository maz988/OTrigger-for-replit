# OpenAI API key for content generation
OPENAI_API_KEY=your_openai_api_key_here

# Pexels API key for image search
PEXELS_API_KEY=your_pexels_api_key_here

# Blog server configuration
PORT=3000
NODE_ENV=development

# Scheduler configuration
# Cron expression for when to publish posts (default: 8 AM daily)
PUBLISH_SCHEDULE=0 8 * * *
ENABLE_SCHEDULER=true

# Content customization
# Number of posts to keep on the homepage
HOMEPAGE_POST_COUNT=6

# Affiliate link to include in blog posts
AFFILIATE_LINK=https://your-domain.com/obsession-trigger-quiz

# Blog configuration
BLOG_TITLE=Obsession Trigger - Relationship Advice
BLOG_DESCRIPTION=Helping women create passionate, lasting relationships
BLOG_URL=https://your-domain.com